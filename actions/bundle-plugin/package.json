{
  "name": "bundle-plugin",
  "description": "GitHub Actions TypeScript template",
  "private": true,
  "version": "0.0.1",
  "author": "Grafana Labs",
  "homepage": "https://github.com/actions/typescript-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "bugs": {
    "url": "https://github.com/actions/typescript-action/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "yarn format:write && yarn package",
    "ci-test": "yarn jest",
    "coverage": "yarn make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "yarn prettier --write .",
    "format:check": "yarn prettier --check .",
    "lint": "yarn eslint . -c ./linters/.eslintrc.yml",
    "package": "yarn ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "yarn package --watch",
    "test": "yarn jest",
    "all": "yarn format:write && yarn lint && yarn test && yarn coverage && yarn package"
  },
  "license": "MIT",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/packages/*"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsonc": "^2.13.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.1.1"
}
